# Dockerfile.chroma
FROM python:3.10-slim

# Définir le répertoire de travail
WORKDIR /app

# Mettre à jour pip
RUN pip install --upgrade pip

# Installer ChromaDB et ses dépendances
RUN pip install --no-cache-dir chromadb uvicorn

# Exposer le port 8000
EXPOSE 8000

# Créer un dossier pour la base de données
RUN mkdir -p /app/.chroma

# Commande pour démarrer ChromaDB
CMD ["chroma", "run", "--path", "/app/.chroma", "--host", "0.0.0.0", "--port", "8000"]